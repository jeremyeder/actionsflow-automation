# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Weather API (get free key from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_api_key_here
OPENWEATHER_CITY=Boston
OPENWEATHER_UNITS=imperial

# Slack Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email (for sending notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_PHONE=+1234567890
TWILIO_TO_PHONE=+1234567890

# GitHub Token (optional, auto-provided by GitHub Actions)
# GITHUB_TOKEN=your_personal_access_token

# Reddit (optional, for better rate limits)
# REDDIT_CLIENT_ID=your_client_id
# REDDIT_CLIENT_SECRET=your_client_secret
